extends ../layouts/mainLayout.pug

block styles
  link(rel="stylesheet", href="../../css/add-product.css")

block content
  .content-block
    if errorMessage
      .err-message
        p #{errorMessage}

    form.product-form(action=("/signup") method="POST" novalidate)
      .form-control
        label(for="name") User Name
        input(
          class=(validationErrors.find(e => e.param === 'name') ? 'invalid' : '')  
          type="text" 
          name="name" 
          id="name" 
          value=oldInputsValues.name
        )

        label(for="email") Email 
        input(
          class=(validationErrors.find(e => e.param === 'email') ? 'invalid' : '')  
          type="email" 
          name="email" 
          id="email" 
          value=oldInputsValues.email
        ) 

        label(for="password") Password
        input(
          class=(validationErrors.find(e => e.param === 'password') ? 'invalid' : '')  
          type="password" 
          name="password" 
          id="password" 
          value=oldInputsValues.password
        ) 

        label(for="confirm-password") Confirm Password
        input(
          class=(validationErrors.find(e => e.param === 'confirmedPassword') ? 'invalid' : '')  
          type="password" 
          name="confirmedPassword" 
          id="confirm-password" 
          value=oldInputsValues.confirmedPassword
        ) 

        input(type="hidden" name="_csrf" value=csrfToken)

      button.submit-button(type="submit") Signup