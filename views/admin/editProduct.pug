extends ../layouts/mainLayout.pug

block styles
  link(rel="stylesheet", href="../../css/add-product.css")

block content
  form.product-form(action=("/admin/".concat(isEdit ? "edit-product" : "add-product")) method="POST")
    .form-control
      input(type="hidden" name="_csrf" value=csrfToken)

      label(for="input-label") Product Title
      input(type="text" name="productTitle" id="input-label" value=(isEdit ? product.title : ""))

      label(for="image-url") Image URL
      input(type="text" name="imageUrl" id="image-url" value=(isEdit ? product.imageUrl: ""))

      label(for="price") Price
      input(type="number" name="price" id="price" value=(isEdit ? product.price: ""))

      label(for="description") Description 
      textarea(name="description", cols="40", rows="8" id="description") #{isEdit ? product.description: ""}
      
    if isEdit 
      input(type="hidden" name="id" value=(product._id))
      

    button.submit-button(type="submit") #{isEdit ? "Edit Product" : "Add Product"}
    