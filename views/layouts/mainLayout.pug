<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title} 
    link(rel="stylesheet", href="../../css/main.css")
    block styles
  body
    header.main-header
      nav.nav-bar
        ul.nav-list
          li.nav-item
            a(href="/" class=(path === "/" && "active")) Shop
          li.nav-item
            a(href="/products" class=(path === "/products" && "active")) Products
          
          if isLoggedIn 
            li.nav-item
              a(href="/cart" class=(path === "/cart" && "active")) Cart
            li.nav-item
              a(href="/orders" class=(path === "/orders" && "active")) Orders
            li.nav-item
              a(href="/admin/add-product" class=(path === "/admin/add-product" && "active")) Add Product
            li.nav-item
              a(href="/admin/products" class=(path === "/admin/products" && "active")) Admin Products
          
        ul.nav-list
          if isLoggedIn 
            li.nav-item
              a(href="/logout" class=(path === "/logout" && "active")) Logout
          else 
            li.nav-item
              a(href="/login" class=(path === "/login" && "active")) Login
            li.nav-item
              a(href="/signup" class=(path === "/signup" && "active")) Signup

    main 
      block content